<h1>Partner Panel</h1>
<p>Please check register submissions</p>

<table align="center">
  <thead>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Biography</th>
    <th>Purpose</th>
    <th>Days</th>
    <th>Active</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @nonvoted_users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.biography %></td>
      <td><%= user.purpose %></td>
      <td><%= user.days %></td>
      <td><%= user.active %></td>
      <td>
        <%= form_for :data, url: votes_url do |f| %>
          <%= f.hidden_field :user_id, value: user.id  %>
          <%= f.hidden_field :partner_id, value: current_user.id  %>
          <%= f.hidden_field :status, value: 'approved' %>
          <%= f.submit "Approved" %>
        <% end %>
      </td>
      <td><%= form_for :data, url: votes_url do |f| %>
          <%= f.hidden_field :user_id, value: user.id  %>
          <%= f.hidden_field :partner_id, value: current_user.id  %>
          <%= f.hidden_field :status, value: 'denied' %>
          <%= f.submit "Denied" %>
        <% end %>
      </td>
      <td><%= form_for :data, url: votes_url do |f| %>
          <%= f.hidden_field :user_id, value: user.id  %>
          <%= f.hidden_field :partner_id, value: current_user.id  %>
          <%= f.hidden_field :status, value: 'undecided' %>
          <%= f.submit "Undecided" %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>